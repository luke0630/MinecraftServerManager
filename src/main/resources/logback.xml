<configuration>
    <!-- コンソールへのログ出力設定 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight([%d{HH:mm:ss} %-5level]) %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ルートロガー設定 -->
    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
